{% for label, messages in app.flashes %}
    {% for message in messages %}
        {% set iconType = 
    label == "success" ? "success" :
    label == "error"   ? "error" :
    label == "info"    ? "info" :
    label == "warning" ? "warning" : "info" 
    %}
    <script>
    import swal from 'sweetalert';
    Swal.fire({
        icon: '{{ iconType }}',
        text: '{{ message|escape('js') }}'
    });
    </script>

    {% endfor %}
{% endfor %}
